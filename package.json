{
  "name": "bostontparty-v2",
  "version": "1.1.2",
  "description": "Version 2 of the Boston T Party website.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brootaylor/bostontparty-v2.git"
  },
  "bugs": {
    "url": "https://github.com/brootaylor/bostontparty-v2/issues"
  },
  "homepage": "https://github.com/brootaylor/bostontparty-v2#readme",
  "keywords": [
    "company-website"
  ],
  "author": {
    "name": "Bruce Taylor",
    "url": "https://brootaylor.com"
  },
  "client": {
    "name": "Boston T Party",
    "url": "https://bostontparty.co.za"
  },
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "prebuild": "npm run clean && echo 'Getting rid of old stuff first ðŸ”¥'",
    "sass:tokens": "rimraf src/styles/tokens/*.scss && json-to-scss 'tokens/*.json' 'src/styles/tokens/_tokens.scss'",
    "sass:dev": "node-sass --output-style uncompressed --source-map true -o dist/styles src/styles",
    "sass:prod": "npm run sass:tokens && node-sass --output-style compressed --source-map true -o dist/styles src/styles",
    "postcss": "postcss --map --no-map -r dist/styles/*.css --config config/postcss.config.js",
    "lint:markdown": "markdownlint src/**/*.md",
    "watch:files": "eleventy --serve",
    "watch:styles": "onchange 'src/**/*.scss' -- npm run build:styles-dev",
    "watch:scripts": "cross-env rollup -c config/rollup.config.js --watch",
    "watch": "run-p watch:*",
    "build:files": "eleventy --quiet",
    "build:styles-dev": "run-s sass:dev postcss",
    "build:styles-prod": "run-s sass:prod postcss",
    "build:scripts": "rollup -c config/rollup.config.js",
    "build": "run-s build:styles-prod build:scripts build:files",
    "postbuild": "echo 'Everything has been built successfully... ðŸš€'",
    "deploy:build": "cross-env NODE_ENV=production npm run build",
    "deploy:draft": "npm run build && netlify deploy",
    "deploy:production": "ntl deploy --prod",
    "audit:browser-support": "npx browserslist && echo 'ðŸ”† Modify .browserslistrc if and when browser support changes. ðŸ”†'",
    "audit:accessibility": "npx pa11y --standard WCAG2AA https://bostontparty.co.za",
    "audit:performance": "lighthouse https://bostontparty.co.za --budget-path=config/budget.json --output-path=./audits/lighthouse_report/bostontparty-performance-results.html --view",
    "audit:vulnerabilities": "npx is-website-vulnerable https://bostontparty.co.za",
    "audit:npm-local": "ncu",
    "audit:npm-global": "ncu -g",
    "debug": "DEBUG=* npx eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-terser": "^0.3.0",
    "autoprefixer": "^10.4.14",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "dotenv": "^16.1.4",
    "faker": "^6.6.6",
    "html-minifier": "^4.0.0",
    "json-to-scss": "^1.6.2",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "object-fit-images": "^3.2.4",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^7.8.3",
    "rimraf": "^5.0.1",
    "rollup": "^2.79.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "markdownlint-cli": "^0.34.0",
    "minami": "^1.2.3",
    "netlify-cli": "^15.4.1",
    "onchange": "^7.1.0",
    "prettier": "^2.8.8"
  }
}
