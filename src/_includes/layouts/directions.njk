{#
	`Contact` page layout template
#}

{# Uses `base.njk` as base document (ie. extends on it) #}
{% extends "layouts/base.njk" %}

{#
	*** A `titleMissingText` variable to make sure an `h1` title is supplied ***
#}
{% set titleMissingText = '* Title text is missing *' %}

{# This block `content` relates to the same block on the `base.njk` layout file #}
{% block content %}
	<article class="[ page ]">

		{# Page header / banner section: #}
		{# Has a look for the `bannerGeneric` collection tag... #}
		{% for content in collections.bannerGeneric %}
			{% include "components/units/banner/banner.njk" %}
		{% endfor %}

		<div class="[ wrapper ] [ flow ]">

			{# Directions info and map wrapper #}
			<div class="[ contact__directions ]">

				{# Directions content overlay #}
				<div class="[ contact__directions--info ] [ flow ]">

					{% if lead %}
					{# This content comes from the `front matter` in the relevant `.md` file - within the `pages` directory #}
					<p class="[ lead ]">{{ lead | safe }}</p>

					<hr>
				{% endif %}

					{% if intro %}
						{# This content comes from the `front matter` in the relevant `.md` file - within the `pages` directory #}
						<p>{{ intro | safe }}</p>
					{% endif %}

					{# This content comes from the markdown in the relevant `.md` file - within the `pages` directory #}
					{{ content | safe }}

				</div>

				{# Map #}
				<div class="[ contact__directions--map ]">
					{% include "components/units/map/map.njk" %}
				</div>

			</div>

		</div>

	</article>
{% endblock %}
